@model ImobiliariaMVC.Models.Locatario

@{
    ViewData["Title"] = "Deletar";
}


<h3>Você tem certeza que deseja excluir o locatario a baixo?</h3>
<hr />

<div>
    <h4>Locatario</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Atividade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Atividade)
        </dd>
    </dl>

    <form asp-action="DeletarConfirmado">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger w-25" /> 
        <a asp-action="Index" class="btn btn-primary w-25">Voltar a lista</a>
    </form>

</div>

