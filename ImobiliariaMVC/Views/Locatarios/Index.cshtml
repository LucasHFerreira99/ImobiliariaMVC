@model IEnumerable<ImobiliariaMVC.Models.Locatario>


@{
    ViewData["Title"] = "Locatarios";
}

<h1>@ViewData["Title"]</h1>

<p>
    
</p>
<div>
    <div class="row">
        <div class="col-md-3 justify-content-end align-items-flex-end">
            <a asp-action="Criar" class="btn btn-primary">Adicionar Novo Locatario</a>
        </div>
    </div>
    <table id="Tabelas" class="table table-light table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.Nome)</th>
                <th>@Html.DisplayNameFor(Model => Model.Cpf)</th>
                <th>@Html.DisplayNameFor(Model => Model.Identidade)</th>
                <th>@Html.DisplayNameFor(Model => Model.Telefone)</th>
                <th>@Html.DisplayNameFor(Model => Model.Atividade)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(Model => item.Nome)</th>
                    <th>@Html.DisplayFor(Model => item.Cpf)</th>
                    <th>@Html.DisplayFor(Model => item.Identidade)</th>
                    <th>@Html.DisplayFor(Model => item.Telefone)</th>
                    <th>@Html.DisplayFor(Model => item.Atividade)</th>
                    <th>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-warning">Detalhes</a>
                        <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

