@model ImobiliariaMVC.Models.Locatario

@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<h4>Locatario</h4>
<hr />

<div class="row">
    <div class="col">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identidade" class="control-label"></label>
                <input asp-for="Identidade" class="form-control" />
                <span asp-validation-for="Identidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Atividade" class="control-label"></label>
                <input asp-for="Atividade" class="form-control" />
                <span asp-validation-for="Atividade" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
